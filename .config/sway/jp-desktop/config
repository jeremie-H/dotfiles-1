# Output configuration
#output HDMI-A-1 pos 0,0 scale 2
#output DP-1 pos 128,1080
#output DVI-D-1 pos 2048,1080
output HDMI-A-1 pos 0,0
output DVI-D-1 pos 1920,0

# Layout defaults
for_window [class="^Thunderbird$"] layout tabbed
for_window [app_id="^feedreader$"] layout tabbed
for_window [class="^Steam$"] layout tabbed

# Default outputs for workspaces
workspace "1:" output HDMI-A-1
workspace "2:" output HDMI-A-1
workspace "3:" output HDMI-A-1
workspace "21:" output DVI-D-1
workspace "42:" output DVI-D-1

# Autostart
exec thunderbird
exec feedreader
exec keepassxc
exec quodlibet
exec redshift

# Volume controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pamixer -i 5 && pkill -RTMIN+1 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id pamixer -d 5 && pkill -RTMIN+1 i3blocks
bindsym XF86AudioMute        exec --no-startup-id pamixer -t   && pkill -RTMIN+1 i3blocks

# Music player controls
bindsym XF86AudioPrev exec --no-startup-id ~/.local/bin/scripts/quodlibet-control force-previous
bindsym XF86AudioPlay exec --no-startup-id ~/.local/bin/scripts/quodlibet-control play-pause || quodlibet --run --play
bindsym XF86AudioNext exec --no-startup-id ~/.local/bin/scripts/quodlibet-control next
