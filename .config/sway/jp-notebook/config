# Input device configuration
input "1102:4618:MSFT0001:00_044E:120A_Touchpad" {
    natural_scroll enabled
    scroll_method two_finger
    tap enabled
}

# Output device configuration
output "Goldstar Company Ltd LG TV 0x00000101" {
    pos 1000 0
    scale 3
}

output eDP-1 pos 0 720

# Autostart
exec signal-desktop
exec riot-desktop
exec keepassxc
exec redshift

# Display brightness controls
bindsym XF86MonBrightnessUp   exec --no-startup-id light -pA 5
bindsym XF86MonBrightnessDown exec --no-startup-id light -pU 5
