{
    "layer": "top",
    "modules-left": [
        "sway/workspaces"
    ],
    "modules-center": [
        "sway/window"
    ],
    "modules-right": [
        "battery",
        "network#wifi",
        "pulseaudio",
        "clock#date",
        "clock#clock"
    ],
    "sway/workspaces": {
        "format": "{name}"
    },
    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity} %",
        "format-icons": [
            "",
            "",
            "",
            "",
            ""
        ]
    },
    "network#wifi": {
        "interface": "wlp2s0",
        "format-wifi": " {essid} ({signalStrength}%)",
        "format-disconnected": " Disconnected"
    },
    "pulseaudio": {
        "format": "{icon} {volume} %",
        "format-bluetooth": "{icon} {volume} %",
        "format-muted": "",
        "format-icons": {
            "headphones": "",
            "handsfree": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": [
                "",
                ""
            ]
        },
        "on-click": "pavucontrol"
    },
    "clock#date": {
        "format": " {:%d.%m}"
    },
    "clock#clock": {
        "format": " {:%H∶%M}"
    }
}
