{
    "layer": "top",
    "modules-left": [
        "sway/workspaces"
    ],
    "modules-right": [
        "custom/mouse-bat",
        "custom/df-root",
        "custom/df-home",
        "custom/df-daten",
        "network#ethernet",
        "pulseaudio",
        "custom/quodlibet-volume",
        "clock#date",
        "clock#clock"
    ],
    "sway/workspaces": {
        "format": "{name}"
    },
    "custom/mouse-bat": {
        "exec": "~/.config/waybar/modules/mouse-bat.sh",
        "return-type": "json",
        "interval": 60,
        "format": "<span color='#888'></span> {icon}",
        "format-icons": [
            "",
            "",
            "",
            "",
            "",
            ""
        ],
        "on-click": "solaar"
    },
    "custom/df-root": {
        "exec": "~/.config/waybar/modules/df.sh /",
        "interval": 60,
        "format": "<span color='#888'> /</span> {}"
    },
    "custom/df-home": {
        "exec": "~/.config/waybar/modules/df.sh /home/jplatte",
        "interval": 60,
        "format": "<span color='#888'> </span> {}"
    },
    "custom/df-daten": {
        "exec": "~/.config/waybar/modules/df-btrfs.sh /mnt/daten",
        "interval": 60,
        "format": "<span color='#888'></span> {}"
    },
    "network#ethernet": {
        "interface": "enp3s0",
        "format-ethernet": "<span color='#888'></span> {ipaddr}/{cidr}",
        "format-disconnected": "<span color='#888'></span> Disconnected"
    },
    "pulseaudio": {
        "format": "<span color='#888'>{icon}</span> {volume} %",
        "format-bluetooth": "<span color='#888'>{icon}</span> {volume} %",
        "format-muted": "<span color='#888'></span>",
        "format-icons": {
            "headphones": "",
            "handsfree": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": [
                "",
                ""
            ]
        },
        "on-click": "pavucontrol"
    },
    "custom/quodlibet-volume": {
        "exec": "~/.config/waybar/modules/quodlibet-volume.sh",
        "interval": 60,
        "format": "<span color='#888'></span> {} %"
    },
    "clock#date": {
        "format": "<span color='#888'></span> {:%d.%m}"
    },
    "clock#clock": {
        "format": "<span color='#888'></span> {:%H∶%M}"
    }
}
