{
    "layer": "top",
    "modules-left": [
        "sway/workspaces"
    ],
    "modules-right": [
        "custom/mouse-bat",
        "custom/battery#BAT0",
        "custom/battery#BAT1",
        "custom/df-root",
        "custom/df-home",
        "network",
        "custom/owncloud",
        "pulseaudio",
        "clock#date",
        "clock#clock"
    ],
    "sway/workspaces": {
        "format": "{name}"
    },
    "custom/mouse-bat": {
        "exec": "~/.config/waybar/modules/mouse-bat.sh",
        "return-type": "json",
        "interval": 60,
        "format": "<span color='#888'></span> {icon}",
        "format-icons": [
            "",
            "",
            "",
            "",
            "",
            ""
        ],
        "on-click": "solaar"
    },
    "custom/battery#BAT0": {
        "exec": "~/.config/waybar/modules/battery.sh BAT0",
        "return-type": "json",
        "interval": 15,
        "signal": 2,
        "format": "<span color='#888'>{icon}</span> {}",
        "format-icons": [
            "",
            "",
            "",
            "",
            ""
        ]
    },
    "custom/battery#BAT1": {
        "exec": "~/.config/waybar/modules/battery.sh BAT1",
        "return-type": "json",
        "interval": 15,
        "signal": 2,
        "format": "<span color='#888'>{icon}</span> {}",
        "format-icons": [
            "",
            "",
            "",
            "",
            ""
        ]
    },
    "network": {
        "format-ethernet": "",
        "format-wireless": "",
        "format-linked": "<span color='#888'></span>",
        "format-disconnected": "",
        "on-click": "alacritty -e nmtui"
    },
    "custom/owncloud": {
        "exec": "pgrep owncloud || printf '\n\ninactive'",
        "format": "",
        "interval": 15,
        "on-click": "owncloud"
    },
    "custom/df-root": {
        "exec": "~/.config/waybar/modules/df.sh /",
        "interval": 60,
        "format": "<span color='#888'> /</span> {}"
    },
    "custom/df-home": {
        "exec": "~/.config/waybar/modules/df.sh /home/jplatte",
        "interval": 60,
        "format": "<span color='#888'> </span> {}"
    },
    "pulseaudio": {
        "format": "<span color='#888'>{icon}</span> {volume} %",
        "format-bluetooth": "<span color='#888'>{icon}/span> {volume} %",
        "format-muted": "<span color='#888'></span>",
        "format-icons": {
            "headphones": "",
            "handsfree": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": [
                "",
                ""
            ]
        },
        "on-click": "pavucontrol"
    },
    "clock#date": {
        "format": "<span color='#888'></span> {:%d.%m}"
    },
    "clock#clock": {
        "format": "<span color='#888'></span> {:%H∶%M}"
    }
}
